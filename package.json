{
  "name": "kash-budget",
  "version": "1.0.0",
  "description": "Kash Budget - Mobile-first personal finance app with guilt-free spending philosophy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "api:dev": "npm run dev --workspace=apps/api",
    "api:build": "npm run build --workspace=apps/api",
    "api:test": "npm run test --workspace=apps/api",
    "mobile:dev": "npm run dev --workspace=apps/mobile",
    "mobile:test": "npm run test --workspace=apps/mobile",
    "shared:build": "npm run build --workspace=packages/shared"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "budget",
    "personal-finance",
    "mobile-app",
    "react-native",
    "nestjs"
  ],
  "author": "Kash Team",
  "license": "UNLICENSED",
  "overrides": {
    "glob": ">=11.1.0",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@inquirer/figures": "^2.0.1",
    "node-emoji": "^2.2.0",
    "yoctocolors-cjs": "^2.1.3"
  }
}
