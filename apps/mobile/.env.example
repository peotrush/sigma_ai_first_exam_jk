# ============================================================================
# API CONFIGURATION
# ============================================================================
# Backend API base URL
API_BASE_URL=http://localhost:3000/api
# Production: API_BASE_URL=https://api.kash-budget.com/api

# API request timeout in milliseconds
API_TIMEOUT=30000

# ============================================================================
# ENVIRONMENT
# ============================================================================
# Node environment for the app
NODE_ENV=development
# Possible values: development | staging | production

# ============================================================================
# FIREBASE CONFIGURATION (Push Notifications)
# ============================================================================
# Firebase project configuration for Cloud Messaging
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================
# Sentry DSN for error and crash reporting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# ANALYTICS (Amplitude or Mixpanel)
# ============================================================================
# Analytics service configuration for tracking user behavior
AMPLITUDE_API_KEY=your-amplitude-api-key
# OR use Mixpanel instead:
# MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features in the mobile app
ENABLE_QR_SCANNING=true
ENABLE_GEOFENCING=true
ENABLE_ML_CATEGORIZATION=true
ENABLE_GAMIFICATION=true

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================
# Enable debug logs and development tools
DEBUG_MODE=true
# Show network requests and timing
NETWORK_DEBUG=false
# Enable Redux DevTools for state debugging
REDUX_DEVTOOLS=true

# ============================================================================
# LOCATION SERVICES
# ============================================================================
# Geolocation and geofencing configuration
GEOFENCE_RADIUS_METERS=100
LOCATION_DWELL_TIME_MS=180000
# Maximum number of active geofences
MAX_GEOFENCES=10

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
# Notification behavior configuration
MORNING_MESSAGE_HOUR=8
# Quiet hours (no notifications)
QUIET_HOURS_START=22
QUIET_HOURS_END=8
# Notification throttling
EXIT_PROMPT_THROTTLE_HOURS=24

# ============================================================================
# APP CONFIGURATION
# ============================================================================
# Version tracking
APP_VERSION=1.0.0
# Build number for tracking builds
BUILD_NUMBER=1
